    {
      "cell_type": "code",
      "source": [
        "import random\n",
        "\n",
        "# Bienvenida e ingreso del nombre del usuario\n",
        "print(\"*******************************************************\")\n",
        "texto = \"\"\"\n",
        "████████████████████████████████████████\n",
        "█▄─▄███─▄▄─█─▄─▄─█▄─▄▄─█▄─▄▄▀█▄─▄██▀▄─██\n",
        "██─██▀█─██─███─████─▄█▀██─▄─▄██─███─▀─██\n",
        "▀▄▄▄▄▄▀▄▄▄▄▀▀▄▄▄▀▀▄▄▄▄▄▀▄▄▀▄▄▀▄▄▄▀▄▄▀▄▄▀\n",
        "\"\"\"\n",
        "print(texto)\n",
        "print(\"*******************************************************\")\n",
        "nombreUsuario = input(\"Ingrese su nombre: \")\n",
        "\n",
        "# Lista de frutas\n",
        "frutas = [\"manzana\", \"pera\", \"banana\", \"cereza\", \"durazno\", \"kiwi\", \"limón\", \"piña\", \"fresa\", \"naranja\", \"sandía\", \"uva\", \"mango\"]\n",
        "\n",
        "# Genera una lista de 6 frutas ganadoras\n",
        "def generarFrutas():\n",
        "    return random.sample(frutas, 6)\n",
        "\n",
        "# Verifica el boleto\n",
        "def verificarBoleto(boleto, frutasGanadoras):\n",
        "    return len(set(boleto) & set(frutasGanadoras))\n",
        "\n",
        "# Mensaje de que va a comenzar el juego\n",
        "def mensajeInicio():\n",
        "    print(\"==============================\")\n",
        "    print(\"Comencemos el juego\")\n",
        "    print(\"==============================\")\n",
        "    texto = \"\"\"\n",
        "    Lista de frutas:\n",
        "    1.- manzana | 2.- pera\n",
        "    3.- banana  | 4.- cereza\n",
        "    5.- durazno | 6.- kiwi\n",
        "    7.- limón   | 8.- piña\n",
        "    9.- fresa   | 10.- naranja\n",
        "    11.- sandía | 12.- uva\n",
        "    13.- mango\n",
        "    \"\"\"\n",
        "    print(texto)\n",
        "    print(\"==============================\")\n",
        "\n",
        "mensajeInicio()\n",
        "frutasGanadoras = generarFrutas()\n",
        "# print(f\"Frutas ganadoras: {', '.join(frutasGanadoras)}\")\n",
        "\n",
        "# Intentos\n",
        "intentos = 0\n",
        "maxIntentos = 3\n",
        "premioPrincipal = False\n",
        "\n",
        "# Bucle del juego\n",
        "while intentos < maxIntentos and not premioPrincipal:\n",
        "    boleto = input(\"Ingrese sus 6 frutas (separadas por espacios) (Por favor ingrese las frutas de la lista): \").split()\n",
        "    # validacion del boleto\n",
        "    if len(boleto) != 6:\n",
        "        print(\"Error: Debes ingresar exactamente 6 frutas.\")\n",
        "        continue\n",
        "    if any(fruta not in frutas for fruta in boleto):\n",
        "        print(\"Error: Todas las frutas deben ser de la lista proporcionada.\")\n",
        "        continue\n",
        "\n",
        "    aciertos = verificarBoleto(boleto, frutasGanadoras)\n",
        "    print(f\"Has acertado {aciertos} frutas.\")\n",
        "\n",
        "    # Probabilidades de ganar\n",
        "    probabilidad = random.randint(1, 100)\n",
        "\n",
        "    # Premios a ganar\n",
        "    if aciertos == 6 and probabilidad <= 10:\n",
        "        premioPrincipal = True\n",
        "        print(\"************************************************************************************\")\n",
        "        print(\"Felicidades has ganado el premio principal: auto nissan GT-R 2024\")\n",
        "    elif aciertos == 5 and probabilidad <= 25:\n",
        "        premioPrincipal = True\n",
        "        print(\"************************************************************************************\")\n",
        "        print(\"Felicidades has ganado el premio secundario: una moto BMW del 2024\")\n",
        "    elif aciertos == 4 and probabilidad <= 50:\n",
        "        premioPrincipal = True\n",
        "        print(\"************************************************************************************\")\n",
        "        print(\"Felicidades has ganado el premio terciario: un viaje a maimi todo pagado \")\n",
        "    elif aciertos == 3 and probabilidad <= 75:\n",
        "        print(\"************************************************************************************\")\n",
        "        print(\"Lo sentimos, has ganado el premio consuelo: un boleto al 5 letras todo pagado\")\n",
        "    elif aciertos == 2 and probabilidad <= 85:\n",
        "        print(\"************************************************************************************\")\n",
        "        print(\"Lo sentimos, has ganado el premio consuelo: un boleto para 1 caja de botellas vodka\")\n",
        "    elif aciertos == 1 and probabilidad <= 90:\n",
        "        print(\"************************************************************************************\")\n",
        "        print(\"Lo sentimos, has ganado el premio consuelo: una caja navideña\")\n",
        "    else:\n",
        "        print(\"************************************************************************************\")\n",
        "        print(\"No has tenido suerte esta vez.\")\n",
        "\n",
        "    # intentos del juego\n",
        "    intentos += 1\n",
        "    if intentos < maxIntentos and not premioPrincipal:\n",
        "        print(\"************************************************************************************\")\n",
        "        print(f\"Te quedan {maxIntentos - intentos} intento(s).\")\n",
        "    elif premioPrincipal:\n",
        "        print(\"************************************************************************************\")\n",
        "        print(\"Has ganado un premio principal y ya no puedes seguir participando.\")\n",
        "        break\n",
        "    else:\n",
        "        print(\"************************************************************************************\")\n",
        "        print(\"Has agotado tus 3 intentos. Gracias por jugar\")\n",
        "        print(\"************************************************************************************\")\n",
        "\n",
        "if not premioPrincipal:\n",
        "    boleto = \"\\n\".join(boleto)\n",
        "    print(f\"-|Mejor suerte la próxima vez|-\\n -|gracias por tu compra |-\\n Te haremos llegar tu pedido va ser 6$: \\n{boleto}\")\n"
      ],
